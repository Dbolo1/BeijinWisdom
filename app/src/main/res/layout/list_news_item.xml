<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >
<ImageView
    android:id="@+id/im_news_icon"
    android:layout_width="100dp"
    android:layout_height="70dp"
    android:src="@drawable/news_pic_default"
    android:background="#a000"
    android:padding="1dp"
    android:scaleType="fitXY"

    />
    <TextView
        android:paddingLeft="5dp"
        android:id="@+id/tv_news_title"
        android:layout_toRightOf="@+id/im_news_icon"
        android:textColor="@color/black"
        android:text="111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:paddingLeft="5dp"
        android:id="@+id/tv_date"
        android:layout_below="@+id/tv_news_title"
        android:layout_toRightOf="@+id/im_news_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#ccc"
        android:text="2017-10-3"
        />
</RelativeLayout>